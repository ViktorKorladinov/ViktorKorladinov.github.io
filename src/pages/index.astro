---
import Layout from '../layouts/Layout.astro';
import TalkCard from '../components/TalkCard.astro';
import {getTalks} from '../utils/processTalks'

const {pastTalks, upcomingTalks} = await getTalks()

---

<Layout title="Scheduling Seminar">
    <!-- Header -->
    <header class="flex flex-col md:flex-row items-center gap-6 bg-blue-50 p-8 rounded-2xl shadow-sm">
        <img src=`${import.meta.env.BASE_URL}/icons/gantt-fabrio-merica.png` alt="logo" class="w-32 h-32 object-contain"/>
        <div>
            <h1 class="text-3xl font-bold text-blue-700 mb-3">Scheduling Seminar</h1>
            <p class="text-gray-700 mb-4 leading-relaxed">
                The objective of the virtual seminar on scheduling research and applications is to discuss both
                the field's newest advancements and survey traditional areas. Seminars typically take place every
                second Wednesday across three time zones.
            </p>
            <nav class="flex flex-wrap gap-3">
                <a href="#PC_co-chairs" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">PC
                    co-chairs</a>
                <a href="#Program_committee" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">Program
                    committee</a>
                <a href="#Calendar" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">Calendar</a>
                <a href="#Feedback" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">Feedback</a>
            </nav>
        </div>
    </header>

    <!-- Social Links -->
    <section class="grid grid-cols-2 md:grid-cols-4 gap-6 mt-10">
        <a
                href="https://www.youtube.com/channel/UCUoCNnaAfw5NAntItILFn4A/live"
                class="flex flex-col items-center text-center p-4 bg-white rounded-xl shadow hover:shadow-md transition"
        >
            <img src={`${import.meta.env.BASE_URL}/icons/youtube.png`} alt="YouTube" class="w-10 h-10 mb-2"/>
            <h3 class="font-medium text-gray-800">Join us on YouTube</h3>
        </a>

        <a
                href="https://list.iid.ciirc.cvut.cz/mailman3/lists/schedulingseminar.rtime.felk.cvut.cz/"
                class="flex flex-col items-center text-center p-4 bg-white rounded-xl shadow hover:shadow-md transition"
        >
            <img src={`${import.meta.env.BASE_URL}/icons/email.png`} alt="email" class="w-10 h-10 mb-2"/>
            <h3 class="font-medium text-gray-800">Subscribe to mailing list</h3>
        </a>

        <a
                href="https://www.linkedin.com/groups/9047074/"
                class="flex flex-col items-center text-center p-4 bg-white rounded-xl shadow hover:shadow-md transition"
        >
            <img src={`${import.meta.env.BASE_URL}/icons/linkedin.png`} alt="linkedin" class="w-10 h-10 mb-2"/>
            <h3 class="font-medium text-gray-800">Subscribe to LinkedIn group</h3>
        </a>

        <a
                href="https://twitter.com/ZHanzalek"
                class="flex flex-col items-center text-center p-4 bg-white rounded-xl shadow hover:shadow-md transition"
        >
            <img src={`${import.meta.env.BASE_URL}/icons/twitter.png`} alt="twitter" class="w-10 h-10 mb-2"/>
            <h3 class="font-medium text-gray-800">Follow us on Twitter</h3>
        </a>
    </section>


    <!-- Talks Section -->
    <section class="grid md:grid-cols-2 gap-10 mt-12">
        <div>
            <h2 class="text-2xl font-semibold mb-4 text-blue-700">Upcoming Talks</h2>
            <div class="space-y-6">
                {upcomingTalks.map(talk =>
                        <TalkCard talk={talk}/>)}
            </div>
        </div>

        <div>
            <h2 class="text-2xl font-semibold mb-4 text-blue-700">Past Talks ({pastTalks.length})</h2>
            <a
                    href="https://docs.google.com/spreadsheets/d/1Glyd6FGzoKtZGfClNA_XaIK8vJZtnu8K4OdNcPr_yHc/edit#gid=0"
                    class="inline-block mb-4 px-4 py-2 bg-gray-700 text-white rounded-lg hover:bg-gray-800"
                    target="_blank"
            >
                Speaker List
            </a>
            <div class="space-y-6">
                {pastTalks.map(talk =>
                        <TalkCard talk={talk} past={true}/>)}
            </div>
        </div>
    </section>

    <!-- Calendar -->
    <section id="Calendar" class="mt-16">
        <h2 class="text-2xl font-semibold mb-4 text-blue-700">Calendar (time zone conversion)</h2>
        <div class="rounded-xl overflow-hidden shadow">
            <iframe
                    src="https://calendar.google.com/calendar/embed?height=600&wkst=2&bgcolor=%234285F4&ctz=Europe%2FPrague&src=..."
                    class="w-full h-[400px] border-0"
            ></iframe>
        </div>
    </section>

    <!-- Feedback -->
    <section id="Feedback" class="mt-16">
        <h2 class="text-2xl font-semibold mb-4 text-blue-700">Feedback Form</h2>
        <div class="rounded-xl overflow-hidden shadow">
            <iframe
                    src="https://docs.google.com/forms/d/e/1FAIpQLSfRk8Nv2J7RvGk-z7Gl5KLWMO5hoZC1Sd-ZFDvgzI97mZe6nw/viewform?embedded=true"
                    class="w-full h-[430px] border-0"
            ></iframe>
        </div>
    </section>
</Layout>
